.container {
  width: 750rpx;
  height: 100%;
  /* padding: 20rpx 25rpx; */
}

.banner-container {
  padding: 0rpx 25rpx;
   width: 700rpx; 
  /* width:650rpx; */
height:386rpx;

  /* height: 320rpx; */
  position: fixed;
  border-radius: 10rpx;
  overflow: hidden;
  z-index: 10;
  top: 0;
}

.banner-item {
  height: 100%;
  width: 100%;
  position: relative;
   display: flex; 
   flex-direction: column;
  justify-content: center;
}
.banner_title{
  height: 60rpx;
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  line-height:70rpx;
margin-left:10rpx;

}
.slide-view {
  height: 260rpx;
  width: 100%;
}

.slide-image {
  /* height: 260rpx; */
  height: 290rpx;
  width: 100%;
  border-radius: 30rpx;
  /* box-shadow: 10rpx 10rpx 5rpx rgba(34, 76, 255, 0.3); */
}

.list-container {
  width: 700rpx;
  padding: 410rpx  25rpx 20rpx 25rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.app-item {
  /* height: 150rpx; */
  width: 700rpx;
  border-radius: 30rpx;
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.last-app-item {
  margin-bottom: 120rpx;
}

.app-item-0 {
  background-color: #0099FF;
}

.app-item-1 {
  background-color: #00b393;
}

.app-item-2 {
  background-color: #ff996c;
}

.icon {
  width: 110rpx;
  height: 110rpx;
  /* margin-left: 30rpx; */
}

.icon-image {
  height: 120rpx;
  width: 120rpx;
  border: 5rpx #ffffff solid;
  border-radius: 20rpx;
}
.zuixing{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-left:10rpx;

}
.content {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  border-width: 1px;
  height: 110rpx;
  width: 465rpx;
  padding-left: 30rpx;
}

.content .header {
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
  width: 95%;
  /* color: #ffffff; */
}

.content .body {
  height: 50rpx;
  /* color: #ffffff; */
  font-size: 25rpx;
  font-weight: normal;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  width: 97%;
  opacity:0.5;
}

.title {
  padding-top: 10rpx;
  font-weight: bold;
  font-size: 30rpx;
}

.goto {
  width: 145rpx;
  height: 100%;
  /* display: flex; */
  align-items: center;
  justify-content: center;
}

.goto-image {
  width: 30rpx;
  height: 30rpx;
}

.action-container {
   width: 720rpx; 
  /* width: 750rpx; */
   height: 100rpx; 
  
  position: fixed;
   bottom: 20rpx; 
  /* bottom: 0rpx; */
   left: 15rpx; 
  z-index: 9;
  background-color: #ffffff;
   border-radius: 60rpx; 
  box-shadow: 10rpx 10rpx 60rpx 5rpx rgba(0, 0, 102, 0.2);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.view-rel-star {
  position: relative;
  margin-left: 40rpx;
}

.btn-star {
  padding: 0;
  margin: 0;
  font-weight: bold;
  background-color: transparent;
  color: #FF9900;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.btn-star::after {
  border: none;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

.btn-text {
  width: 80rpx;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;

}
.banner_description{
  height: 50rpx;
  font-size: 26rpx;
  margin-left:10rpx;
  opacity:0.5;
}

.view-rel-share {
  position: relative;
  margin-right: 40rpx;
}

.btn-share {
  padding: 0;
  margin: 0;
  font-weight: bold;
  background-color: transparent;
  color: #00CC66;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.btn-share::after {
  border: none;
}

